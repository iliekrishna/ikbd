<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCadastro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F7D58"
        android:backgroundTint="#3F7D58"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#EC5228"
            android:fontFamily="@font/cherry_bomb_one"
            android:gravity="center"
            android:rotationX="-4"
            android:text="Cadastro de Alunos"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/cherry_bomb_one"
            android:hint="ID"
            android:inputType="text"
            android:textColorHint="#EFEFEF" />

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/cherry_bomb_one"
            android:hint="Nome"
            android:inputType="text"
            android:textColorHint="#EFEFEF" />

        <EditText
            android:id="@+id/edtCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/cherry_bomb_one"
            android:hint="CPF"
            android:inputType="text"
            android:textColorHint="#EFEFEF" />

        <EditText
            android:id="@+id/edtTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/cherry_bomb_one"
            android:hint="Telefone"
            android:inputType="text"
            android:textColorHint="#EFEFEF" />

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="365dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:backgroundTint="#E2725B"
            android:ellipsize="none"
            android:fontFamily="@font/cherry_bomb_one"
            android:gravity="center|center_horizontal|center_vertical"
            android:inputType="text"
            android:onClick="voltar"
            android:rotationX="-4"
            android:text="Voltar"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#E2725B"
                android:fontFamily="@font/cherry_bomb_one"
                android:onClick="salvar"
                android:rotationX="-4"
                android:text="Salvar"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnLimpar"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#E2725B"
                android:fontFamily="@font/cherry_bomb_one"
                android:onClick="limpar"
                android:rotationX="-7"
                android:text="Limpar"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>