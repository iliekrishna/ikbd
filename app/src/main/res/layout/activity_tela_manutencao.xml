<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F7D58"
    tools:context=".TelaManutencao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:background="#EC5228"
            app:srcCompat="@drawable/dramatic_acclaimed_screwdriver_phillips_head_with_transparent_background_png" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#EC5228"
            android:fontFamily="@font/cherry_bomb_one"
            android:gravity="center"
            android:text="Manutenção de dados"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/cherry_bomb_one"
            android:hint="ID"
            android:inputType="text"
            android:textColorHint="#EFEFEF" />

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/cherry_bomb_one"
            android:hint="Nome"
            android:inputType="text"
            android:textColorHint="#EFEFEF" />

        <EditText
            android:id="@+id/edtCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/cherry_bomb_one"
            android:hint="CPF"
            android:inputType="text"
            android:textColorHint="#EFEFEF" />

        <EditText
            android:id="@+id/edtTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/cherry_bomb_one"
            android:hint="Telefone"
            android:inputType="text"
            android:textColorHint="#EFEFEF" />

        <Button
            android:id="@+id/btnAlterar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#E2725B"
            android:fontFamily="@font/cherry_bomb_one"
            android:rotationX="-4"
            android:text="Atualizar"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnExcluir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#E2725B"
            android:fontFamily="@font/cherry_bomb_one"
            android:rotationX="-4"
            android:text="Excluir"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#E2725B"
            android:fontFamily="@font/cherry_bomb_one"
            android:onClick="voltar"
            android:rotationX="-4"
            android:text="Voltar"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>